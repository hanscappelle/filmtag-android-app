<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    >

    <TextView
        android:id="@+id/text_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:text="Kodak Tmax 400"
        android:textSize="24sp"
        android:singleLine="true"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/text_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_type"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/text_frames"
        android:textSize="16sp"
        tools:text="exposed at ISO 200"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/text_frames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        tools:text="36 frames"
        android:layout_marginRight="8dp"
        />

    <!--indicated with text color for now-->
