<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- header showing details of this roll -->
    <TextView
        android:id="@+id/text_roll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:textSize="20sp"
        tools:text="Kodak NC film ISO 400 exposed @ ISO 800 with 36 frames" />

    <!-- a horizontally scrolling view of tags here -->
    <HorizontalScrollView
        android:id="@+id/scroll_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_roll_details"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/wrapper_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/scroll_tags"
        android:background="@color/primary_dark_material_light"
        />

    <!-- list of all frames and their settings -->
    <ListView
        android:id="@+id/list_frames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"></ListView>


</RelativeLayout>