<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FilmRollListFragment">

    <action
        android:id="@+id/action_about"
        app:destination="@id/AboutFragment" />

    <fragment
        android:id="@+id/AboutFragment"
        android:name="be.hcpl.android.filmtag.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about">

        <action
            android:id="@+id/back"
            app:destination="@id/FilmRollListFragment" />

    </fragment>
    <fragment
        android:id="@+id/FilmRollListFragment"
        android:name="be.hcpl.android.filmtag.FilmRollListFragment"
        android:label="@string/title_film_rolls"
        tools:layout="@layout/fragment_roll_overview">

        <action
            android:id="@+id/action_add_roll"
            app:destination="@id/EditRollFragment"/>
        <action
            android:id="@+id/action_detail"
            app:destination="@id/FilmFrameListFragment" />
    </fragment>

    <fragment
        android:id="@+id/EditRollFragment"
        android:name="be.hcpl.android.filmtag.EditRollFragment"
        tools:layout="@layout/fragment_form_roll">



    </fragment>

    <fragment
        android:id="@+id/FilmFrameListFragment"
        android:name="be.hcpl.android.filmtag.FilmFrameListFragment">

        <action
            android:id="@+id/action_back"
            app:destination="@id/FilmRollListFragment" />

    </fragment>

</navigation>